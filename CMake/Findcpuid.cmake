SET(CPUID_LIBRARIES ${CMAKE_SOURCE_DIR}/libs/libcpuid.so.14)
IF (EXISTS "${CPUID_LIBRARIES}")
    MESSAGE(STATUS "Found cpuid: ${CPUID_LIBRARIES}")
